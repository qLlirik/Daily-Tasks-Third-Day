<Window x:Class="ThirdDay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThirdDay"
        mc:Ignorable="d"
        Title="Квадро" FontSize="16" Background="LightSalmon" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="click_AddNewEmployees" Content="Регистрация сотрудников" Width="250" Height="40" Margin="10"/>
            <Button Click="click_AddNewProject" Content="Регистрация проектов" Width="250" Height="40" Margin="10"/>
            <Button Click="click_BindingEmployeesToProject" Content="Привязка сотрудников к проекту" Width="250" Height="40" Margin="10"/>
            <Button Click="click_EndProject" Content="Регистрация конца проекта" Width="250" Height="40" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
